{% extends 'base.html.twig' %}

{% block title %}Maps - Rainbow Six Siege{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-map text-warning"></i>
        Liste des Maps
    </h1>
    {% if app.user %}
        <a href="{{ path('app_map_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvelle Map
        </a>
    {% endif %}
</div>

{% if maps|length > 0 %}
    <div class="row g-4">
        {% for map in maps %}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    {% if map.image %}
                        <img src="{{ map.image }}" class="card-img-top" alt="{{ map.name }}" style="height: 200px; object-fit: cover;">
                    {% else %}
                        <div class="bg-secondary text-center py-5">
                            <i class="fas fa-map fa-4x text-white-50"></i>
                        </div>
                    {% endif %}
                    
                    <div class="card-body">
                        <h5 class="card-title">{{ map.name }}</h5>
                        <p class="card-text">
                            <span class="badge bg-success">{{ map.mode }}</span>
                        </p>
                        
                        <p class="card-text">
                            <i class="fas fa-map-marker-alt"></i> {{ map.location }}
                        </p>
                        
                        <p class="card-text">
                            {{ map.description|length > 100 ? map.description|slice(0, 100) ~ '...' : map.description }}
                        </p>
                        
                        <div class="d-flex gap-2 mt-3">
                            <a href="{{ path('app_map_show', {'id': map.id}) }}" class="btn btn-sm btn-primary">
                                <i class="fas fa-eye"></i> Détails
                            </a>
                            {% if app.user %}
                                <a href="{{ path('app_map_edit', {'id': map.id}) }}" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle"></i> 
        Aucune map enregistrée pour le moment.
        {% if app.user %}
            <a href="{{ path('app_map_new') }}" class="alert-link">Créer la première map</a>
        {% endif %}
    </div>
{% endif %}
{% endblock %}
