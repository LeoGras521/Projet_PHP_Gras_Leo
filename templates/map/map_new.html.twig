{% extends 'base.html.twig' %}

{% block title %}Nouvelle Map - Rainbow Six Siege{% endblock %}

{% block body %}
<div class="mb-4">
    <a href="{{ path('app_map_index') }}" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Retour à la liste
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body p-5">
                <h2 class="text-center mb-4">
                    <i class="fas fa-map-marked-alt text-warning"></i>
                    Créer une nouvelle map
                </h2>

                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.mode) }}
                        {{ form_widget(form.mode) }}
                        {{ form_errors(form.mode) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.location) }}
                        {{ form_widget(form.location) }}
                        {{ form_errors(form.location) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.image) }}
                        {{ form_widget(form.image) }}
                        {{ form_errors(form.image) }}
                        <small class="form-text text-muted">Entrez l'URL d'une image (optionnel)</small>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save"></i> Créer la map
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
