{% extends 'base.html.twig' %}

{% block title %}Map index{% endblock %}

{% block body %}
    <h1>Map index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Mode</th>
                <th>Location</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for map in maps %}
            <tr>
                <td>{{ map.id }}</td>
                <td>{{ map.name }}</td>
                <td>{{ map.mode }}</td>
                <td>{{ map.location }}</td>
                <td>{{ map.description }}</td>
                <td>{{ map.image }}</td>
                <td>
                    <a href="{{ path('app_map_show', {'id': map.id}) }}">show</a>
                    <a href="{{ path('app_map_edit', {'id': map.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_map_new') }}">Create new</a>
{% endblock %}
