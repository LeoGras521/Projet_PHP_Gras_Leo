{% extends 'base.html.twig' %}

{% block title %}Modifier {{ agent.name }} - Rainbow Six Siege{% endblock %}

{% block body %}
<div class="mb-4">
    <a href="{{ path('app_agent_index') }}" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Retour à la liste
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body p-5">
                <h2 class="text-center mb-4">
                    <i class="fas fa-edit text-warning"></i>
                    Modifier {{ agent.name }}
                </h2>

                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.role) }}
                        {{ form_widget(form.role) }}
                        {{ form_errors(form.role) }}
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.speed) }}
                                {{ form_widget(form.speed) }}
                                {{ form_errors(form.speed) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.armor) }}
                                {{ form_widget(form.armor) }}
                                {{ form_errors(form.armor) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.gadget) }}
                        {{ form_widget(form.gadget) }}
                        {{ form_errors(form.gadget) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.image) }}
                        {{ form_widget(form.image) }}
                        {{ form_errors(form.image) }}
                        <small class="form-text text-muted">Entrez l'URL d'une image (optionnel)</small>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-warning btn-lg">
                            <i class="fas fa-save"></i> Enregistrer les modifications
                        </button>
                    </div>
                {{ form_end(form) }}

                <hr class="my-4">

                <form method="post" action="{{ path('app_agent_delete', {'id': agent.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet agent ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ agent.id) }}">
                    <div class="d-grid">
                        <button class="btn btn-danger">
                            <i class="fas fa-trash"></i> Supprimer cet agent
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
